<div class="patterned-block">

  <% if @photos.present? %>
    <section class="photo-album-container horizontal-only">
      <ul class="thumbnails">
        <% @photos.each do |photo| %>
          <li class="span2">
            <%= link_to image_tag(photo.image.url(:thumb)), photo_path(photo), :class => "thumbnail" %>
          </li>
        <% end %>
      </ul>
    </section>
  <% end %>

  <section class="container photo-container">
    <%= image_tag @photo.image.url(:large), :class => "photo-full" %>
  </section>

  <section class="container photo-description">
    <% unless @photo.pets.empty? %>
      <p>
        На этой фотографии присутствуют:
        <%= raw @photo.pets.map{ |p| link_to(p.name, "")}.join(", ") %>
      </p>
    <% end %>

    <p>

    </p>
  </section>

</div>

