<%= form_for [:admin, @person], :html => { :class => "form-horizontal" } do |f| %>
  <div class="row">
      <div class="span5">
          <div class="control-group">
             <label class="control-label">Имя</label>
             <div class="controls">
               <%= f.text_field :name %>
              <%= hidden_field_tag :role, params[:role] %>
             </div>
          </div>

          <div class="control-group">
             <div class="controls">
                <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
             </div>
          </div>
      </div>
  </div>
<% end %>
