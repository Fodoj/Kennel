<%= nested_form_for [:admin, pet], :validate => true, :html => { :class => "form-horizontal pet-form", :multipart => true } do |f| %>

  <div class="row">
      <div class="span5">
          <div class="control-group">
             <label class="control-label">Кличка</label>
             <div class="controls">
               <%= f.text_field :name %>
             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Титулы</label>
             <div class="controls">
               <%= f.text_field :title %>
             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Дата рождения</label>
             <div class="controls date-select">
               <%= f.date_select :born %>
             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Пол</label>
             <div class="controls">

               <div class="btn-group pet-type-buttons" data-toggle="buttons-radio">
                 <a class="btn <%== 'active' if pet.sex %>" data-sex="true" title="Кобель" href="#">
                   Кобель
                  </a>
                  <a class="btn <%== 'active' if !pet.sex %>" data-sex="false" title="Сука" href="#">
                    Сука
                  </a>
               </div>

                <%= f.hidden_field :sex, :class => 'pet-sex-value' %>

             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Окрас</label>
             <div class="controls">
               <%= f.text_field :color %>
             </div>
          </div>


          <div class="control-group">
             <label class="control-label">Владелец</label>
             <div class="controls">
               <%= f.select  :owner_id, Person.owners.collect {|p| [ p.name, p.id ] }, { :prompt => "Нет владельца"} %>
             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Заводчик</label>
             <div class="controls">
               <%= f.select :breeder_id, Person.breeders.collect {|p| [ p.name, p.id ] }, { :prompt => "Нет заводчика"}  %>
             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Питомник</label>
             <div class="controls">
               <%= f.select :kennel_id, Person.kennels.collect {|p| [ p.name, p.id ] }, { :prompt => "Нет питомника"} %>
             </div>
          </div>

          <% pet_id = pet.new_record? ? 0 : pet.id %>
          <div class="control-group">
             <label class="control-label">Мать</label>
             <div class="controls">
               <%= f.select :mother_id, Pet.bitches.where('id != ?', pet_id).collect {|p| [ p.name, p.id ] }, { :prompt => "Нет матери"}  %>
             </div>
          </div>

          <div class="control-group">
             <label class="control-label">Отец</label>
             <div class="controls">
               <%= f.select :father_id, Pet.dogs.where('id != ?', pet_id).collect {|p| [ p.name, p.id ] }, { :prompt => "Нет отца"} %>
             </div>
          </div>

      </div>

      <div class="span4 photos-block">
       <h3>Фотографии</h3>
       <div class="row">
             <%= f.fields_for :photos do |photo_form| %>
                <% if photo_form.object.image.present? %>
                  <div class="thumbnail span2">
                    <%= photo_form.link_to_remove raw("<i class='icon-white icon-remove-circle'></i>") %>
                    <%= image_tag photo_form.object.image.url(:thumb) %>
                  </div>
                <% else %>
                  <div class="control-group">
                    <%= photo_form.file_field :image %>
                    <%= photo_form.link_to_remove raw("<i class='icon-remove'></i>"), :class => "btn" %>
                  </div>
                <% end %>
             <% end %>
            </div>
      </div>
  </div>


  <div class="row">
    <div class="form-actions">
      <%= f.submit "Сохранить", :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
