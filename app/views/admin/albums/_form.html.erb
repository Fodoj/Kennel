<%= nested_form_for [:admin, album], :validate => true, :html => { :class => "form-horizontal", :multipart => true  } do |f| %>

  <div class="pull-right">
    <%= f.submit "Сохранить", :class => 'btn btn-primary btn-large' %>
  </div>

  <div class="control-group">
     <label class="control-label">Название</label>
     <div class="controls">
       <%= f.text_field :name, :class => "span3" %>
     </div>
   </div>

  <div class="control-group">
     <label class="control-label">Описание</label>
     <div class="controls">
       <%= f.text_area :description, :rows => "4", :class => "span3" %>
     </div>
  </div>

  <% if album.new_record? %>
  <div class="control-group">
    <label class="control-label">Собаки в альбоме</label>
    <div class="controls">
      <% Pet.all.each do |pet| %>
          <label class="checkbox">
            <%= check_box_tag "album[pet_ids][]", pet.id, false, :id => dom_id(pet) %>
            <%= "#{pet.name} #{pet.title}" %>
          </label>
      <% end %>
    </div>
  </div>
  <% end %>

  <div class="control-group">
    <h3>Фотографии</h3>
    <div class="span10">
      <div id="new_photos">
      </div>
      <div class="row main-row">
         <%= f.fields_for :photos do |photo_form| %>
            <% if photo_form.object.image.present? %>
              <div class="span5 attached-row">
                <div class="row">
                  <div class="span2 thumbnail attached-thumb">
                    <%= image_tag photo_form.object.image.url(:thumb) %>
                    <%= photo_form.link_to_remove raw("<i class='icon-white icon-remove-circle'></i>") %>
                  </div>
                  <div class="span3">
                    <%= photo_form.text_area :caption, :placeholder => "Описание" %>
                  </div>
                </div>
                <div class="control-group row">
                  <a class="pull-right" data-toggle="modal" href="#photo-<%= photo_form.object.id %>-modal" >
                    Отметить питомцев
                  </a>
                  <label class="control-label">Показывать на главной странице</label>
                  <div class="controls">
                    <%= photo_form.check_box :on_main %>
                  </div>


                  <div class="modal hide fade" id="photo-<%= photo_form.object.id %>-modal">
                    <div class="modal-header">
                      <a type="button" class="close" data-dismiss="modal">×</a>
                      <h3 class="main-row">Выберите собак</h3>
                      <%= image_tag photo_form.object.image.url(:admin_thumb), :class => "thumbnail centered" %>
                    </div>
                    <div class="modal-body pets-modal-chooser">
                      <% Pet.order("name ASC").all.each do |pet| %>
                          <label class="checkbox">
                            <%= check_box_tag "pets[#{photo_form.object.id}][]", pet.id, photo_form.object.pets.include?(pet), :id => dom_id(pet) %>
                            <%= "#{pet.name} #{pet.title}" %>
                          </label>
                      <% end %>
                    </div>
                    <div class="modal-footer">
                      <a href="#" class="btn btn-primary" data-dismiss="modal">Выбрать</a>
                    </div>
                  </div>


                </div>
              </div>
            <% else %>
              <div class="control-group">
                <%= photo_form.file_field :image %>
                <%= photo_form.link_to_remove raw("<i class='icon-remove'></i>"), :class => "btn" %>
              </div>
            <% end %>
         <% end %>
        </div>
    </div>
  </div>

<% end %>

<!-- SUPER PHOTO UPLOADER START -->
<%= form_tag uploader_admin_albums_path, :class => "form-horizontal", :id => "fileupload", :multipart => true  do %>
        <div class="row">
          <div class="span10 fileupload-buttonbar">
            <h3 class="main-row">Загрузить фотографии</h3>
            <div class="progressbar fileupload-progressbar nofade"><div style="width:0%;"></div></div>
            <span class="btn success fileinput-button">
              <span><%= "Выбрать файлы" %>...</span>
              <%= file_field_tag 'image', :multiple => true %>
            </span>
            <button type="button" class="btn btn-danger delete"><%= "Удалить выбранные" %></button>
            <input type="checkbox" class="toggle">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="span10">
            <table class="table zebra-striped"><tbody class="files"></tbody></table>
            <div id="loading"> </div>
          </div>
        </div>
      <script>
        var fileUploadErrors = {
          maxFileSize: 'File is too big',
          minFileSize: 'File is too small',
          acceptFileTypes: 'Filetype not allowed',
          maxNumberOfFiles: 'Max number of files exceeded',
          uploadedBytes: 'Uploaded bytes exceed file size',
          emptyResult: 'Empty file upload result'
        };
      </script>

      <!-- IMPORTANT fade class makes fileupload depend on css transition effect REMOVE or RENAME it -->
      <script id="template-upload" type="text/html">
        {% for (var i=0, files=o.files, l=files.length, file=files[0]; i<l; file=files[++i]) { %}
        <tr class="template-upload nofade">
          <td class="preview"><span class="nofade"></span></td>
          <td class="name">{%=file.name%}</td>
          <td class="size">{%=o.formatFileSize(file.size)%}</td>
          {% if (file.error) { %}
          <td class="error" colspan="2"><span class="label important">Error</span> {%=fileUploadErrors[file.error] || file.error%}</td>
          {% } else if (o.files.valid && !i) { %}
          <td><div class="progress"><div class="bar" style="width:0%;"></div></div></td>
          <td class="start">{% if (!o.options.autoUpload) { %}<button class="btn btn-primary"><%= t('photos.template.start') %></button>{% } %}</td>
          {% } else { %}
          <td colspan="2"></td>
          {% } %}
          <td class="cancel">{% if (!i) { %}<button class="btn btn-info"><%= t('photos.template.cancel') %></button>{% } %}</td>
        </tr>
        {% } %}
      </script>
      <script id="template-download" type="text/html">
        {% for (var i=0, files=o.files, l=files.length, file=files[0]; i<l; file=files[++i]) { %}
        <tr class="template-download nofade">
          {% if (file.error) { %}
          <td></td>
          <td class="size">{%=o.formatFileSize(file.size)%}</td>
          <td class="error" colspan="2"><span class="label important">Error</span> {%=fileUploadErrors[file.error] || file.error%}</td>
          {% } else { %}
          <td class="preview">{% if (file.thumbnail_url) { %}
            <a href="{%=file.url%}" title="{%=file.name%}" rel="gallery"><img src="{%=file.thumbnail_url%}"></a>
          {% } %}</td>

          <td class="size">{%=o.formatFileSize(file.size)%}</td>
          <td colspan="2"></td>
          {% } %}
          <td class="delete">
          <button class="btn btn-danger" data-type="{%=file.delete_type%}" data-url="{%=file.delete_url%}"><%= "Удалить" %></button>
          <input type="checkbox" name="delete" value="1">
          </td>
        </tr>
        {% } %}
      </script>

      <!-- The jQuery UI widget factory, can be omitted if jQuery UI is already included -->
      <%= javascript_include_tag 'admin/plugins/fileupload/vendor/jquery.ui.widget.js' %>
      <!-- The Templates and Load Image plugins are included for the FileUpload user interface -->
      <script src="http://blueimp.github.com/JavaScript-Templates/tmpl.min.js"></script>
      <script src="http://blueimp.github.com/JavaScript-Load-Image/load-image.min.js"></script>
      <!-- The Iframe Transport is required for browsers without support for XHR file uploads -->
      <%= javascript_include_tag 'admin/plugins/fileupload/jquery.iframe-transport.js' %>
      <%= javascript_include_tag 'admin/plugins/fileupload/jquery.fileupload.js' %>
      <%= javascript_include_tag 'admin/plugins/fileupload/jquery.fileupload-ui.js' %>
      <!-- add include_tag js files to config.assets.precompile in ...environments/production.rb if you have it in vendor/ assets -->

      <script type="text/javascript" charset="utf-8">
        $(function () {
            // Initialize the jQuery File Upload widget:
            $('#fileupload').fileupload({
              autoUpload: true
            }).bind('fileuploaddone', function (e, data) {
              var new_id = data.result[0].id;
              $("#new_photos").append("<input id='new_photos_' name='new_photos[]' type='hidden' value='"+new_id+"'>");
            }).bind('fileuploaddestroy', function (e, data) {
              var id = data.url.match(/\d/g).join('');
              $("input[value="+id+"]").remove();
            });;
            //
            // Load existing files:
            $.getJSON($('#fileupload').prop('action'), function (files) {
              var fu = $('#fileupload').data('fileupload'),
                template;
              fu._adjustMaxNumberOfFiles(-files.length);
              template = fu._renderDownload(files)
                .appendTo($('#fileupload .files'));
              // Force reflow:
              fu._reflow = fu._transition && template.length &&
                template[0].offsetWidth;
              template.addClass('in');
              $('#loading').remove();
            });

        });
      </script>

<% end %>
<!-- SUPER PHOTO UPLOADER END -->
