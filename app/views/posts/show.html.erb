<section class="container">
  <article class="row">
    <aside class="span3">
      <div class="hider hider-top"></div>
      <div class="hider hider-bottom"></div>
      <div class="thumbnails-scroller">
        <ul class="thumbnails">
          <% if @post.album.present? %>
            <% @post.photos.each do |photo| %>
              <li class="span3">
                <%= link_to "", :class => "thumbnail" do %>
                  <%= image_tag(photo.image.url(:thumb)) %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </aside>
    <div class="span9 post-body">
      <h1><%= @post.title %></h1>
      <%= raw(@post.body) %>
    </div>
  </article>


  <div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'kennel'; // required: replace example with your forum shortname
      var disqus_developer = 1;

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

</section>

