<header>
  <div class="navbar clearfix">
    <% if current_page?(root_url) %>
      <%= link_to image_tag("logo2.png"), root_url, :id => "logo", :class => "brand" %>
    <% else %>
      <%= link_to image_tag("logoa.jpg"), root_url, :id => "logo", :class => "brand" %>
    <% end %>

    <ul class="nav nav-pills">
      <li class=" <%== 'active' if current_page?(posts_path) %>">
        <%= link_to "Новости", posts_path %>
      </li>
      <li class=" <%== 'active' if current_page?(pets_path) %>">
        <%= link_to "Питомцы", pets_path %>
      </li>
      <li class=" <%== 'active' if current_page?(gallery_path) %>">
        <%= link_to "Галерея", gallery_path %>
      </li>
      <% StaticPage.all.each do |page| %>
        <li><%= link_to page.name,  static_page_path(:path => page.slug) %></li>
      <% end %>
    </ul>
  </div>

</header>
